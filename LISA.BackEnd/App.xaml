<Application x:Class="LISA.BackEnd.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LISA.BackEnd"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>

        <Style TargetType="TextBlock" x:Key="TextBlockLISAStyle">
            <Style.Setters>
                <Setter Property="Margin"               Value="5, 0, 5, 0"/>
                <Setter Property="Foreground"           Value="Blue"/>
                <Setter Property="VerticalAlignment"    Value="Center"/>
            </Style.Setters>
        </Style>

        <Style TargetType="TextBlock" x:Key="TextBlockMandatoryLISAStyle" BasedOn="{StaticResource TextBlockLISAStyle}">
            <Style.Setters>
                <Setter Property="FontWeight"   Value="Bold"/>
                <Setter Property="Foreground"   Value="OrangeRed"/>
            </Style.Setters>
        </Style>

        <Style TargetType="TextBox" x:Key="TextBoxLISAStyle">
            <Style.Setters>
                <Setter Property="Margin"       Value="5, 2, 5, 2"/>
            </Style.Setters>
        </Style>

        <Style TargetType="ColumnDefinition" x:Key="ColumnDefinitionFormDataLISAStyle">
            <Style.Setters>
                <Setter Property="Width"        Value="200"/>
            </Style.Setters>
        </Style>

    </Application.Resources>
</Application>
